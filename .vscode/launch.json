  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker - Node:Nodemon",
      "port": 9222,
      "protocol": "auto",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}\\server.js",
      "runtimeExecutable": "npm",
      "port": 9229,
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "useWSL": true
    }
  ]
}